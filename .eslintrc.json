{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {
        "indent": ["error", 2],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/jsx-props-no-spreading": [0, {
            "html": "ignore",
            "custom": "ignore",
            "exceptions": []
        }],
        "react/jsx-closing-bracket-location": [1, "line-aligned"]
    },
    "globals": {
        "React": "readonly"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["./"]
            }
        }
    }
}
